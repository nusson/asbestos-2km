/*
  ===WIDTH===
*/
$kff-w-max = 1280px // use to determine container max width
$kff-w-basis = 1440px // photoshop size, use to calc ratio

// Hack... because i don't know why is that important to have that much values and their implications
// basicaly <900 = mobile, >=900 = desktop
$kff-mq-phone = 700px
// $kff-mq-desktop = 768px
$kff-mq-tablet-portrait = 800px
$kff-mq-tablet = 1024px
$kff-mq-desktop = 1025px
$kff-mq-show-burger = $kff-mq-tablet
rupture.mobile-cutoff = $kff-mq-phone
rupture.desktop-cutoff = $kff-mq-desktop

$mq-mobile = 700px

/*
  ===MARGIN===
*/
$kff-w-safe-margin = 60 // minimum horizontal margin for container on desktop device, if width is 100% (i.e. width < $kff-w-max)
$kff-w-safe-margin-tablet = 45 // minimum horizontal margin for container on tablet device
$kff-w-safe-margin-mobile = 15 // minimum horizontal margin for container on mobile device

/*
  ===Z-INDEX===
*/
$z-index-navbar = 1000 
$z-transition = 10000


// Add your custom vars here
$z-menu-mobile = 100
$z-navbar = 200
$z-search-pannel = 500
$z-thematic-pannel = 50
$z-sidebar = 20
$z-footer = 30

$h-header = 50px 40px
$w-sidebar = 455px

not-mobile()
  +above($mq-mobile + 1)
    {block}

$gutters = 40px 20px 15px
